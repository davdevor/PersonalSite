<!DOCTYPE html>
<html>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-119836223-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-119836223-1');
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Files/userlogo.png">
    @System.Web.Optimization.Styles.Render("~/Content/bootstrapcss")
    @System.Web.Optimization.Styles.Render("~/Content/sitecss")
</head>
<body>
    @{Html.RenderPartial("_navbar"); }
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
    @{Html.RenderPartial("_footer"); }
    @System.Web.Optimization.Scripts.Render("~/Scripts/jquery")
    @System.Web.Optimization.Scripts.Render("~/Scripts/bootstrapjs")
    @System.Web.Optimization.Scripts.Render("~/Scripts/layoutscripts")
    <script>
        (function (helper) {
            $(function () {
                helper.defaultButtonClasses = "btn btn-default btn-sm text-white mg2 nav-button";
                helper.activeButtonClasses = "primary background-secondary btn btn-default btn-sm text-white mg2 nav-button";
                helper.hoverButtonClasses = "background-secondary btn btn-default btn-sm text-white mg2 nav-button";
                helper.onready();
            });
        }(LayoutHelper));
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
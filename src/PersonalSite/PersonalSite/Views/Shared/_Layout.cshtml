<!DOCTYPE html>
<html>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-119836223-1"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @System.Web.Optimization.Styles.Render("~/Content/bootstrapcss")
    @System.Web.Optimization.Styles.Render("~/Content/sitecss")

</head>
<body>
    <nav class="navbar navbar-expand-sm justify-content-center background-primary">
        <ul class="navbar-nav">
            <li class="nav-item">@Html.ActionLink("About", "About", null, new { @class = "btn btn-default btn-sm text-white mg2", id = "nv1" })</li>
            <li class="nav-item">@Html.ActionLink("Projects", "Projects", null, new { @class = "btn btn-default btn-sm text-white mg2", id = "nv2" })</li>
            <li class="nav-item">@Html.ActionLink("Resume", "Resume", null, new { @class = "btn btn-default btn-sm text-white mg2", id = "nv3" })</li>
            <li class="nav-item">@Html.ActionLink("Contact Info", "ContactInfo", null, new { @class = "btn btn-default btn-sm text-white mg2", id = "nv4" })</li>
        </ul>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        @{Html.RenderPartial("_footer"); }
        
    </div>
    @System.Web.Optimization.Scripts.Render("~/Scripts/jquery")
    @System.Web.Optimization.Scripts.Render("~/Scripts/bootstrapjs")
    @System.Web.Optimization.Scripts.Render("~/Scripts/layoutscripts")
    <script>
        (function (helper) {
            $(function () {
                helper.linkedinImageId = "linkedinIcon";
                helper.githubImageId = "githubIcon";
                helper.navbuttonsIds = ["nv1", "nv2", "nv3", "nv4"];
                helper.onready();
            });
        }(LayoutHelper));
    </script>
    @RenderSection("Scripts", false);
</body>
</html>